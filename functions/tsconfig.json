{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es2017",
    "paths": {
      "@*" : ["*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
